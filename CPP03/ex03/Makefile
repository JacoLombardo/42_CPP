CC = c++   
FLAGS = -Wall -Werror -Wextra -Wshadow -Wno-shadow
98 = -std=c++98
TRAPS = ClapTrap.cpp ScavTrap.cpp FragTrap.cpp
SRCS = main.cpp $(TRAPS)
TESTER = tester.cpp $(TRAPS)
HEADER = ClapTrap.hpp ScavTrap.hpp FragTrap.hpp
NAME = diamond

all: $(NAME)

$(NAME): $(SRCS)
	@$(CC) $(FLAGS) $(98) -o $@ $(SRCS)

tester:	$(TESTER)
	@$(CC) $(FLAGS) $(98) -o $@ $(TESTER)
	
clean:

fclean: clean
	rm -f $(NAME)
	rm -f tester

re: fclean all
